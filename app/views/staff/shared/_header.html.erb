<header>
  <span class="logo-mark">BAUKIS</span>
  <%= content_tag(:span, flash.notice, class: 'notice' ) if flash.notice %>
  <%= content_tag(:span, flash.alert, class: 'alert') if flash.alert %>
  <%=
    if current_staff_member
      link_to 'ログアウト', staff_session_path(current_staff_member), method: :delete
    else
      #binding.pry
      link_to 'ログイン', :staff_login
    end
  %>
  <%= link_to 'アカウント', staff_account_path(current_staff_member) if current_staff_member %>
</header>
